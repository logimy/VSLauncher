                                            AncestorType={x:Type Button},
                                            AncestorLevel=1},
                                            Path=IsPressed}" Value="True">
                                            <Setter Property="Source" Value="limg/Icons/globe_inactive.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
